<div class="container mt-5">
    <div class="row">
        <label class="col-4">
          WRITER
        </label>
    
    
            <label class="col-4">
             <%=@detail_post.writer %>
            </label>
            </div>
            
        <div class="row">
            <label class="col-4">
                TITLE
            </label>
            <label class="col-4">
                <%=@detail_post.title %>
                
            </label>
        </div>
                
        <div class="row">
            <label class="col-4">
                CONTENT
            </label>
             <label class="col-4">
                <%=@detail_post.content %>
                </label>
    
    </div>
    
</div>

<div class="container mt-5">
    <label>COMMENT</label>
    <% @detail_post.comments.each do |c| %>
      <h6><%= c.content %></h6>
    <% end %>
      
    <form action="/comment/<%= @detail_post.id%>"  method="get"> 
        <div class = "row">
            <input type ="text" class="form-control col-10" name="content"></input>
            <button type="submit" class="btn btn-primary col-2">Submit</button>
        </div>
    </form>
</div>