<div class = "container"> 
<form action="post" method="get">
  <div class="form-group">
    <label>WRITER</label>
    <input type=text class="form-control" name="writer">
    
  </div>
  <div class="form-group">
    <label>TITLE</label>
    <input type=text class="form-control" name="title">
  </div>
  
  <div class="form-group">
    <label>CONTENT</label>
    <textarea class="form-control" rows="3" name="content"></textarea>
  </div>
  

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
</div>


<div class="container mt-5 col-12">
    <label class="col-6" style="text-align:center;">TITLE</label>
    <label class="col-2" style="text-align:center;">WRITER</label>
    <label class="col-3" style="text-align:center;">EDIT/DELETE</label>

    <% @posts.each do |p| %>
    <label class="col-6" style="text-align:center;">
        <a href="/detail/ <%= p.id %>"><%=p.title %></a>
    </label>
    
     <label class= "col-2" style="text-align:center;"><%= p.writer%></label>
     <label class= "col-3">
         <div class="row mx-auto" style="text-align:center;">
             <form action= "/edit/<%= p.id%>" method ="get">
                <button type="submit" class="btn btn-primary" >EDIT</button>
             </form>
             
             <form action= "/delete/<%=p.id%>" method="get"> 
                  <button type="submit" class="btn btn-primary">DELETE</button>
             </form>
         </div>
    </label>
         <% end %>
    </div>